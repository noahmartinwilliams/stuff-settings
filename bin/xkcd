#! /usr/bin/python

import json
import sys
import string
from subprocess import *

def get_json(number):
	if number==-1:
		return json.loads(check_output(["wget", "-q", "-O", "-", "xkcd.com/info.0.json"]))
	else:
		return json.loads(check_output(["wget", "-q", "-O", "-", "xkcd.com/"+str(number)+"/info.0.json"]))

def get_text(text):
	return text['alt']

def get_image(text):
	call(["wget", "-P", "/home/noah/Pictures/xkcd", text['img']])

js=get_json(int(sys.argv[1]))
get_image(js)
f=open('/home/noah/Pictures/xkcd/'+str( string.replace(check_output( ['basename', js['img']]), "\n", ".txt")  ), "w")
f.write(get_text(js))
f.close()
